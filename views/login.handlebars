<div class="container">
  <div class="columns">
    <section id="login_section" class="column">
      <h2 class="title">Log in</h2>

      <form class="form login-form">
        <div class="field">
          <label for="email-login" class="label">Email:</label>
          <input class="input" type="text" id="email-login" />
        </div>
        <div class="field">
          <label for="password-login" class="label">Password:</label>
          <input class="input" type="password" id="password-login" />
        </div>
        <div class="field">
          <button class="button is-primary" type="submit">Log in</button>
        </div>
        <p id="login_warning" class="has-text-danger is-hidden">Login error message goes here.</p>
      </form>
    </section>

    <section id="signup_section" class="column">
      <h2 class="title">Sign up</h2>

      <form class="form signup-form">
        <div class="field">
          <label for="name-signup" class="label">Name:</label>
          <input class="input" type="text" id="name-signup" />
        </div>
        <div class="field">
          <label for="email-signup" class="label">Email:</label>
          <input class="input" type="text" id="email-signup" />
        </div>
        <div class="field">
          <label for="password-signup" class="label">Password:</label>
          <input class="input" type="password" id="password-signup" />
        </div>
        <div class="field">
          <button class="button is-link" type="submit">Sign up</button>
        </div>
        <p id="signup_warning" class="has-text-danger is-hidden">Signup error message goes here.</p>
      </form>
    </section>
  </div>

  <script src="/js/login.js"></script>
</div>