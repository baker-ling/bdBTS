<div id="post" class="container">
<section class="box block">
  <header class="columns is-vcentered">
    <div class="column">
      <h1 class="title"><a href="/posts/{{post.id}}">{{post.title}}</a></h1>
    </div>
    <div class="column is-narrow">
      <h2 class="subtitle">Posted by <span class="has-text-info">{{post.user.name}}</span> on <span
        class="has-text-info">{{as_date post.updatedAt}}</span></h2>
    </div>
  </header>
  <div class="content">{{post.body}}
  </div>
</section>
{{#if post.comments}}
  <section id="comments" class="container">
    <header class="columns">
      <h2 class="column is-10 is-offset-1">
        <span class="title is-4">Comments</span>
      </h2>
    </header>
    {{#each post.comments as |comment| }}
      <div class="columns">
        <article class="column is-10 is-offset-1">
          <div class="box">
            <h3 class="title is-5">{{comment.user.name}} said on {{as_date comment.createdAt}}:</h3>
            <p class="content">{{comment.body}}</p>
          </div>
        </article>
      </div>
    {{/each}}
  </section>
{{/if}}

{{#if logged_in}}
  <section id="new-comment" class="container mt-5">
    <form id="comment-form" class="columns form">
      <div class="column is-10 is-offset-1">

        <div class="field">
          <label class="label">Add a comment?</label>
          <div class="control">
            <textarea id="comment-body" class="textarea" placeholder="Type your comment here..."></textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>
      </div>
    </form>
  </section>
  <script src="/js/comment.js"></script>
{{/if}}
</div>